@page "/editpokemon/{id}"
@using JaLuPokemon.Models

@inherits EditPokemonBase

<EditForm Model="@EditPokemonModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator/>
    <ValidationSummary/>
    <h3>Edit Pokemon</h3>
    <hr />
    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="First Name"
                       @bind-Value="EditPokemonModel.Name" />
            <ValidationMessage For="@(() => EditPokemonModel.Name)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email"
                       @bind-Value="EditPokemonModel.Email" />
            <ValidationMessage For="@(() => EditPokemonModel.Email)" />
        </div>
    </div>
        <div class="form-group row">
        <label for="confirmEmail" class="col-sm-2 col-form-label">
            Confirm Email
        </label>
        <div class="col-sm-10">
            <InputText id="confirmEmail" class="form-control" placeholder="Confirm Email"
                       @bind-Value="EditPokemonModel.ConfirmEmail" />
            <ValidationMessage For="@(() => EditPokemonModel.ConfirmEmail)" />
        </div>
    </div>

     <div class="form-group row">
        <label for="typeOne" class="col-sm-2 col-form-label">
            TypeOne
        </label>
        <div class="col-sm-10">
            <CustomInputSelect id="typeOne" @bind-Value="EditPokemonModel.TypeOneId" class="form-control">
                @foreach (var type in PokemonTypes)
                {
                    <option value="@type.PokemonTypeId" >@type.Value</option>
                }
            </CustomInputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="typeTwo" class="col-sm-2 col-form-label">
            TypeTwo
        </label>
        <div class="col-sm-10">
            <CustomInputSelect id="typTwo" @bind-Value="EditPokemonModel.TypeTwoId" class="form-control">
                @foreach (var type in PokemonTypes)
                {
                    <option value="@type.PokemonTypeId" >@type.Value</option>
                }
            </CustomInputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="gender" class="col-sm-2 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <CustomInputSelect id="gender" @bind-Value="EditPokemonModel.Gender" class="form-control">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender" >@gender</option>
                }
            </CustomInputSelect>
        </div>
    </div>
    <div class="form-group row">
        <label for="dateOfBirth" class="col-sm-2 col-form-label">Date Of Birth</label>
        <div class="col-sm-10">
            <InputDate @bind-Value="EditPokemonModel.DateOfBirth" class="form-control" />
        </div>    
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</EditForm>