@page "/"
@inherits PokemonListBase

<h3>Number of Pokemons Selected: @SelectedPokemonsCount</h3>

@if (Pokemons == null)
{
    <div class="spinner"></div>
}
else
{
    <input type="checkbox" @bind="ShowFooter" id=showFooter>
    <label for="showFooter">Show Footer</label>
    <div class="card-deck">
        @foreach (var pokemon in Pokemons)
        {
            <DisplayPokemon OnPokemonSelection="PokemonSelectionChanged" ShowFooter="ShowFooter" Pokemon="pokemon"></DisplayPokemon>
        }
    </div>
}    



