@inherits DisplayPokemonBase

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <div class="card-header">
        <input type="checkbox" @onchange="CheckBox_Changed">
        <h5>@Pokemon.Name</h5>
    </div>
    <img src="@Pokemon.PhotoPath" alt="@Pokemon.Name" class="card-img-top imageThumbnail" />
   @if (ShowFooter)
   {
    <div class="card-footer text-center">
        <a href="@($"pokemondetails/{Pokemon.PokemonId}")" class="btn btn-primary" m-1>View</a>
        <a href="@($"editpokemon/{Pokemon.PokemonId}")" class="btn btn-primary" m-1>Edit</a>
        <a href="#" class="btn btn-danger" m-1>Delete</a>
    </div>
   }
</div>